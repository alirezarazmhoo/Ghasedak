<body data-sa-theme="1">

    <div class="login">

        <!-- Login -->
        <div class="login__block active" id="l-login">
            <div class="login__block__header">
                @*<i class="zmdi zmdi-account-circle"></i>*@
                ! لطفا وارد شوید
               
            </div>

            <div class="login__block__body">
                <div style="color:red;text-align:right">
                    @Html.ValidationSummary()
                </div>
                <form action="~/User/SignIn" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.userName, new { placeholder = "نام کاربری", @class = "form-control text-center" })
                    </div>
                       
                    <div class="form-group">
                        @Html.PasswordFor(m => m.password, new { placeholder = "رمز عبور", @class = "form-control text-center" })
                    </div>
                    @*<div class="form-group">
            <img alt="Captcha" id="Captcha" src="~/get-captcha-image" style="" />
            <i class="fa fa-fw fa-refresh" id="Captcha2"></i>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Captcha, new { placeholder = "جواب جمع", @class = "form-control text-center" })
            @Html.ValidationMessageFor(model => model.Captcha)
        </div>*@
                    <div class="form-group">
                        <div class="remember-me">
                            <label><input asp-for="RememberMe" type="checkbox" name="">  مرا بخاطر بسپار </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn--icon login__block__btn">
                        <i class="fa fa-fw fa-arrow-right"></i>
                    </button>
                    @*<input type="hidden" name="Url" value="@Request["ReturnUrl"]" />*@

                </form>
            </div>
        </div>
    </div>
    <script src="~/AdminContent/bower_components/jquery/dist/jquery.js"></script>

    <script src="~/AdminContent/AdminLogin/popper.min.js"></script>
    <script src="~/AdminContent/AdminLogin/bootstrap.min.js"></script>
    <script src="~/AdminContent/AdminLogin/app.min.js"></script>

    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="~/Content/vendors/sweetalert2/dist/sweetalert2.min.js"></script>*@
    <script>
        $("#Captcha").val("");
        $("#Captcha2").click(function () {
            resetCaptchaImage();
        });
        function resetCaptchaImage() {
            d = new Date();
            $("#Captcha").attr("src", "/get-captcha-image?" + d.getTime());
        }
    </script>
</body>
</html>