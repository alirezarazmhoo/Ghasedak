<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">فعال سازی خیریه</h3>
                    <br />
                    <p style="color:green">@ViewBag.success</p>
                </div>
                <div class="row">
                    <form asp-action="ActiveCharity" method="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">کد دریافتی برای فعال سازی خیریه</label>
                                    <input class="form-control" type="text"   id="androidCode" name="androidCode">
                                </div>
                            </div>
                           
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="ثبت" class="btn btn-default" style="margin-top: 5%;" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}